{
  "compilerOptions": {
    "strict": true,
    "outDir": "dist",
    "target": "ES5",
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "$back/*": ["./back/*"],
      "$common/*": ["./common/*"],
      "$front/*": ["./front/*"]
    }
  },
  "include": [
    "./src/back/**/*.ts",
    "./src/common/**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}
